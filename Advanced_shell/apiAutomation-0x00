#!/bin/bash

# Set endpoint and output files
API_URL="https://pokeapi.co/api/v2/pokemon/"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -f "$API_URL" -o "$OUTPUT_FILE"

# Check exit status
if [ $? -ne 0 ]; then
  echo "Failed to retrieve data from $API_URL" >> "$ERROR_FILE"
  exit 1
else
  echo "Data successfully saved to $OUTPUT_FILE"
fi
